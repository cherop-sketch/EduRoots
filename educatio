import zipfile
import os

# Directory structure
base_dir = "EduRootsGitHubRepo"
os.makedirs(f"{base_dir}/lessons", exist_ok=True)
os.makedirs(f"{base_dir}/assets/css", exist_ok=True)

# index.html
index_html = """<!DOCTYPE html>
