# CSS file
style_css = """body {
  font-family: Arial, sans-serif;
  margin: 0;
  background-color: #f4f4f4;
}
header, footer {
  background-color: #2d572c;
  color: white;
  text-align: center;
  padding: 1em;
}
nav a {
  color: white;
  margin: 0 1em;
  text-decoration: none;
}
main {
  padding: 20px;
}
.featured {
  background: #fff;
  padding: 20px;
  border-radius: 5px;
  margin-bottom: 20px;
}
"""

# Write files
with open(f"{base_dir}/index.html", "w") as f:
    f.write(index_html)
with open(f"{base_dir}/lessons/water-cycle.html", "w") as f:
    f.write(lesson_html)
with open(f"{base_dir}/assets/css/style.css", "w") as f:
    f.write(style_css)

# Create ZIP
with zipfile.ZipFile("EduRoots_GitHub_Repo_Template.zip", "w") as zipf:
    for folder, _, files in os.walk(base_dir):
        for file in files:
            filepath = os.path.join(folder, file)
            arcname = os.path.relpath(filepath, base_dir)
            zipf.write(filepath, os.path.join("EduRoots-demo", arcname))

